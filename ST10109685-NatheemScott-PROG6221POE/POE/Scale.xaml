<Window x:Class="POE.Scale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POE"
        mc:Ignorable="d"
        Title="Scale" Height="183" Width="602">
    <Grid Background="#FF36454F">
        <TextBlock Text="Select Scaling Factor:" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,20,0,0"/>
        <ComboBox Name="cbScalingFactor" 
                  Width="150" 
                  Height="30" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Top" 
                  Margin="0,60,0,0">
            <ComboBoxItem Content="0.5 (Half)" Tag="0.5"/>
            <ComboBoxItem Content="2 (Double)" Tag="2"/>
            <ComboBoxItem Content="3 (Triple)" Tag="3"/>
        </ComboBox>
        <Button Name="btnConfirm" 
                Content="Confirm" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,120,0,0" 
                Click="btnConfirm_Click"/>
    </Grid>
</Window>
